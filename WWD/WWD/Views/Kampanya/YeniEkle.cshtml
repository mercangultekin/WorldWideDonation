
@{
    ViewBag.Title = "Yeniekle";
}

<div class="container-fluid" style="background-color:white;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="/Kampanya/YeniEkle/@Url.RequestContext.RouteData.Values["id"]" enctype="multipart/form-data">
                    <h2><span class="as-color"> ADD SOMETHING NEW</span> </h2>
                    <label>Add New Stuff</label>
                    <table class="table" id="dynamic_field">
                        <thead>
                            <tr>
                                <th>Stuff</th>
                                <th>Quantity</th>
                                <th>Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="stufflist">
                                <td><input type="text" name="StuffName" /></td>
                                <td><input type="number" name="Miktari" min="1" /></td>
                                <td>
                                    <select name="Birim" required>
                                        <option disabled>Choose Unit</option>
                                        <option value="Pieces">Pieces</option>
                                        <option value="Kg">Kg</option>
                                        <option value="Oz">Oz</option>
                                        <option value="Pound">Pound</option>
                                        <option value="Lt">Lt</option>
                                        <option value="Ton">Ton</option>

                                    </select>
                                </td>
                                <td><a name="add" id="add" class="btn btn-success glyphicon glyphicon-plus addmore"></a></td>
                            </tr>

                        </tbody>
                    </table>
                    <label>Extra Photo's</label>
                    <table class="table" id="dynamic_field2">
                        <thead>
                            <tr>
                                <th>Choose Pictures</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="stufflist2">
                                <td><input type="file" name="ResimID" /></td>
                                <td><a name="add2" id="add2" class="btn btn-success glyphicon glyphicon-plus addmore2"></a></td>
                            </tr>

                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-large">ADD</button>
                </form>
            </div>
        </div>

    </div>
</div>
@section script{
    
<script>
    $(document).ready(function myfunction() {
        var i = 1;
        $('.addmore').on('click', function myfunction() {
            i++;
            $('#dynamic_field').append('<tr class="stufflist" id="row' + i + '"> <td><input type="text" name="StuffName"/></td> <td><input type="number" name="Miktari" required min="1"/></td><td><select name="Birim" required><option disabled>Choose Unit</option><option value="Pieces">Pieces</option><option value="Kg">Kg</option><option value="Oz">Oz</option><option value="Pound">Pound</option><option value="Lt">Lt</option><option value="Ton">Ton</option></select></td> <td><button name="remove" id="' + i + '" class="btn btn-danger btn-remove hayda">X</button></td></tr>')
            //  $('tbody').append('<tr class="stufflist" id="row' + i + '"> <td><input type="text" name="StuffName"/></td>  <td><input type="number" name="Miktari"/></td><td><input type="text" name="Birim"/></td> <td><button name="remove" id="'+i+'" class="btn btn-danger btn-remove hayda">X</button></td></tr>');
        });
        $(document).on('click', '.btn-remove', function myfunction() {
            var button_id = $(this).attr("id");
            $("#row" + button_id + "").remove();

        });

        var a = 1;
        $('.addmore2').on('click', function myfunction() {
            a++;
            $('#dynamic_field2').append('<tr class="stufflist2" id="row2' + a + '"> <td><input type="file" name="ResimID" /></td> <td><button name="remove" id="' + a + '" class="btn btn-danger btn-remove hayda2">X</button></td></tr>')
            //  $('tbody').append('<tr class="stufflist" id="row' + i + '"> <td><input type="text" name="StuffName"/></td>  <td><input type="number" name="Miktari"/></td><td><input type="text" name="Birim"/></td> <td><button name="remove" id="'+i+'" class="btn btn-danger btn-remove hayda">X</button></td></tr>');
        });
        $(document).on('click', '.btn-remove', function myfunction() {
            var button_id = $(this).attr("id");
            $("#row2" + button_id + "").remove();

        });
    });
    </script>    
    

}