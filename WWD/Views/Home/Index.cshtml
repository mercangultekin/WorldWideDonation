<div class="as-main-section" style="padding:0px 0px 50px 0px;background-color:white; ">
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <div class="as-fancytitle"> <h2>Our Causes</h2> </div>
                <div class="as-fancy-divider-wrap">
                    <div class="as-fancy-divider"> <span class="as-first-dote"></span> <span class="as-sec-dote as-bgcolor"></span> <span class="as-third-dote"></span> </div>
                </div>
            </div>
            <div class="as-causes as-causes-grid">
                <ul class="row">
                    @if (Model != null)
                    {

                        foreach (WWD.Models.Kampanya item in Model)
                        {
                            <li class="col-md-3">
                                <figure>
                                    <a href="#"><img src="@item.KampanyaFoto" alt=""></a>
                                    <figcaption>
                                        <div class="as-donarhover">
                                            <i class="flaticon-profile27 as-color"></i>
                                            <a href="#">Donors: <span>@item.Donates.Where(x=>x.KampanyaID==item.KampanyaId).Count()</span></a>
                                        </div>
                                    </figcaption>
                                </figure>
                                <div class="as-causes-text">
                                    <div class="as-causes-info">
                                        <h3><a href="#">@BKisalt(item.Adi)</a></h3>
                                        <p>@Kisalt(item.Aciklama)</p>
                                    </div>
                                    <div class="as-causes-strip">
                                        <div data-percent="100%" class="causes-sec">
                                            <div class="as-causebar">
                                                <div style="background-color: #edb542; width:100%;" class="percent-bar"></div>
                                            </div>
                                        </div>
                                      
         
                                    </div>
                                    <a href="/Kampanya/KampanyaDetay/@item.KampanyaId" class="as-causes-btn">Donate Now</a>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
