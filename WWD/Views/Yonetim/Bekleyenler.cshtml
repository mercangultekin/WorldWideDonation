
@{
    ViewBag.Title = "Bekleyenler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="background-color:white">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Started By</th>
                <th>Campaign Name</th>
                <th>Category</th>
                <th>Postal Code</th>
                <th>Aprove||Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WWD.Models.Kampanya item in ViewBag.bekleyenler)
            {
                <tr>
                    <td>@item.Kullanici.KullaniciIsim</td>
                    <td><a href="/Kampanya/KampanyaDetay/@item.KampanyaId">@item.Adi</a></td>
                    <td>@item.Kategori.KategoriAdi</td>
                    <td>@item.PostalCode</td>
                    <td><a href="/Yonetim/Onaylandi/@item.KampanyaId" class="btn btn-success">Approve</a><a href="/Yonetim/Rededildi/@item.KampanyaId" class="btn btn-danger">Reject</a></td>
                </tr>
            }
         
          
        </tbody>
    </table>
</div>

